<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Text?>

<Pane xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.tictaccode.tictactoe.TicTacToeController"
      fx:id="pane" prefHeight="500.0" prefWidth="500.0" stylesheets="@styles.css">

    <Group fx:id="board">
        <Line fx:id="hLine1" layoutX="120" layoutY="190" startX="0" endX="260" strokeWidth="7" strokeLineCap="ROUND"/>
        <Line fx:id="hLine2" layoutX="120" layoutY="290" startX="0" endX="260" strokeWidth="7" strokeLineCap="ROUND"/>
        <Line fx:id="vLine1" layoutX="200" layoutY="110" startY="0" endY="260" strokeWidth="7" strokeLineCap="ROUND"/>
        <Line fx:id="vLine2" layoutX="300" layoutY="110" startY="0" endY="260" strokeWidth="7" strokeLineCap="ROUND"/>

        <Button fx:id="spot1" styleClass="gameButton" layoutX="115" layoutY="105" prefWidth="85" prefHeight="85"
                focusTraversable="false" onMouseClicked="#placeMove" />
        <Button fx:id="spot2" styleClass="gameButton" layoutX="200" layoutY="105" prefWidth="100" prefHeight="85"
                focusTraversable="false" onMouseClicked="#placeMove" />
        <Button fx:id="spot3" styleClass="gameButton" layoutX="300" layoutY="105" prefWidth="85" prefHeight="85"
                focusTraversable="false" onMouseClicked="#placeMove" />
        <Button fx:id="spot4" styleClass="gameButton" layoutX="115" layoutY="190" prefWidth="85" prefHeight="100"
                focusTraversable="false" onMouseClicked="#placeMove" />
        <Button fx:id="spot5" styleClass="gameButton" layoutX="200" layoutY="190" prefWidth="100" prefHeight="100"
                focusTraversable="false" onMouseClicked="#placeMove" />
        <Button fx:id="spot6" styleClass="gameButton" layoutX="300" layoutY="190" prefWidth="85" prefHeight="100"
                focusTraversable="false" onMouseClicked="#placeMove" />
        <Button fx:id="spot7" styleClass="gameButton" layoutX="115" layoutY="290" prefWidth="85" prefHeight="85"
                focusTraversable="false" onMouseClicked="#placeMove" />
        <Button fx:id="spot8" styleClass="gameButton" layoutX="200" layoutY="290" prefWidth="100" prefHeight="85"
                focusTraversable="false" onMouseClicked="#placeMove" />
        <Button fx:id="spot9" styleClass="gameButton" layoutX="300" layoutY="290" prefWidth="85" prefHeight="85"
                focusTraversable="false" onMouseClicked="#placeMove" />
    </Group>

    <Text fx:id="versionLabel" layoutX="5" layoutY="490" style="-fx-font-family: Helvetica; -fx-font-weight: bold;
        -fx-font-alignment: center; -fx-font-size: 12; -fx-fill: #A0A0A0;" />
</Pane>
