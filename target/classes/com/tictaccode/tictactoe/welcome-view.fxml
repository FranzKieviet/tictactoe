<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Text?>

<Pane xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.tictaccode.tictactoe.TicTacToeController"
      fx:id="welcomePane" prefHeight="500.0" prefWidth="500.0" stylesheets="@styles.css">

    <!-- holds all the ui elements pertaining to the tic-tac-toe board -->
    <Group fx:id="welcomeBoard">
        <!-- The game board's lines -->

        <!-- The game buttons used to get a player's move in each spot on the board -->
        <Button fx:id="spotNewGame" layoutX="120" layoutY="120" prefWidth="140" prefHeight="100"
                styleClass="backButton" text="New Game" />
    </Group>

    <!-- displays the current version of the application -->
    <Text fx:id="versionLabel" layoutX="5" layoutY="490" />
</Pane>
