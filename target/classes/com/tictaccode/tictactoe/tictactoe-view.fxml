<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<Pane xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.tictaccode.tictactoe.TicTacToeController"
      fx:id="pane" prefHeight="500.0" prefWidth="500.0" stylesheets="@styles.css">

    <!-- holds all the ui elements pertaining to the tic-tac-toe board -->
    <Group fx:id="gameBoard">
        <!-- The images that show the X and O on the board -->
        <ImageView fx:id="spot1XImage" opacity="0" />
        <ImageView fx:id="spot2XImage" opacity="0" />
        <ImageView fx:id="spot3XImage" opacity="0" />
        <ImageView fx:id="spot4XImage" opacity="0" />
        <ImageView fx:id="spot5XImage" opacity="0" />
        <ImageView fx:id="spot6XImage" opacity="0" />
        <ImageView fx:id="spot7XImage" opacity="0" />
        <ImageView fx:id="spot8XImage" opacity="0" />
        <ImageView fx:id="spot9XImage" opacity="0" />
        <ImageView fx:id="spot1OImage" opacity="0" />
        <ImageView fx:id="spot2OImage" opacity="0" />
        <ImageView fx:id="spot3OImage" opacity="0" />
        <ImageView fx:id="spot4OImage" opacity="0" />
        <ImageView fx:id="spot5OImage" opacity="0" />
        <ImageView fx:id="spot6OImage" opacity="0" />
        <ImageView fx:id="spot7OImage" opacity="0" />
        <ImageView fx:id="spot8OImage" opacity="0" />
        <ImageView fx:id="spot9OImage" opacity="0" />

        <!-- The fade circle for the X and O images -->
        <Circle fx:id="spot1Fade" style="-fx-fill: #D0D0D0;" />
        <Circle fx:id="spot2Fade" style="-fx-fill: #D0D0D0;" />
        <Circle fx:id="spot3Fade" style="-fx-fill: #D0D0D0;" />
        <Circle fx:id="spot4Fade" style="-fx-fill: #D0D0D0;" />
        <Circle fx:id="spot5Fade" style="-fx-fill: #D0D0D0;" />
        <Circle fx:id="spot6Fade" style="-fx-fill: #D0D0D0;" />
        <Circle fx:id="spot7Fade" style="-fx-fill: #D0D0D0;" />
        <Circle fx:id="spot8Fade" style="-fx-fill: #D0D0D0;" />
        <Circle fx:id="spot9Fade" style="-fx-fill: #D0D0D0;" />

        <!-- The game buttons used to get a player's move in each spot on the board -->
        <Button fx:id="spot1" styleClass="gameButton" focusTraversable="false" onMouseClicked="#placeMove"
                disable="true" />
        <Button fx:id="spot2" styleClass="gameButton" focusTraversable="false" onMouseClicked="#placeMove"
                disable="true" />
        <Button fx:id="spot3" styleClass="gameButton" focusTraversable="false" onMouseClicked="#placeMove"
                disable="true" />
        <Button fx:id="spot4" styleClass="gameButton" focusTraversable="false" onMouseClicked="#placeMove"
                disable="true" />
        <Button fx:id="spot5" styleClass="gameButton" focusTraversable="false" onMouseClicked="#placeMove"
                disable="true" />
        <Button fx:id="spot6" styleClass="gameButton" focusTraversable="false" onMouseClicked="#placeMove"
                disable="true" />
        <Button fx:id="spot7" styleClass="gameButton" focusTraversable="false" onMouseClicked="#placeMove"
                disable="true" />
        <Button fx:id="spot8" styleClass="gameButton" focusTraversable="false" onMouseClicked="#placeMove"
                disable="true" />
        <Button fx:id="spot9" styleClass="gameButton" focusTraversable="false" onMouseClicked="#placeMove"
                disable="true" />

        <ImageView fx:id="boardImage" />

        <Circle fx:id="gameFade" style="-fx-fill: #909090;" />
    </Group>

    <!-- displays the current version of the application -->
    <Text fx:id="versionLabel" x="5" />
</Pane>
